<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">


    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:price.properties</value>
                <value>classpath:auditorium.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        </property>
    </bean>


    <bean id="user" class="vo.User" scope="prototype">
       <property name="id" value="#{randomUtils.getRandomLong()}"/>
    </bean>

    <bean id="userDao" class="db.UserDao" scope="singleton"/>

    <bean id="randomUtils" class="utils.RandomUtils"/>

    <bean id="event" class="vo.Event" scope="prototype">
        <property name="id" value="#{randomUtils.getRandomLong()}"/>
    </bean>

    <bean id="eventDao" class="db.EventDao" scope="singleton"/>

    <bean id="auditorium" class="vo.Auditorium" scope="prototype">
        <property name="id" value="#{randomUtils.getRandomLong()}"/>
    </bean>

    <bean id="auditoriumDao" class="db.AuditoriumDao" scope="singleton"/>

    <bean id="ticket" class="vo.Ticket" scope="prototype">
        <property name="id" value="#{randomUtils.getRandomLong()}"/>
    </bean>

    <bean id="bookingService" class="services.BookingService" scope="singleton">
        <property name="ticketPrice" value="${price}"/>
        <property name="vipTicketPrice" value="${vip_price}"/>
    </bean>

</beans>